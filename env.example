# Configuración de Flash Reserver
# Copia este archivo como .env y completa con tus datos reales

# Configuración de la aplicación
SECRET_KEY=your-secret-key-here
DATABASE_URI=sqlite:///reservas.db

# Configuración de Email (REQUERIDO para notificaciones)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=tu-email@gmail.com
MAIL_PASSWORD=tu-password-de-aplicacion
MAIL_DEFAULT_SENDER=tu-email@gmail.com

# Configuración de Google OAuth (OPCIONAL)
GOOGLE_CLIENT_ID=tu-google-client-id
GOOGLE_CLIENT_SECRET=tu-google-client-secret

# Configuración de seguridad
SESSION_COOKIE_SECURE=false
LOG_LEVEL=INFO

# Configuración de notificaciones (NUEVO)
NOTIFICATION_EMAIL_ENABLED=true
NOTIFICATION_SMS_ENABLED=false
NOTIFICATION_PUSH_ENABLED=true
NOTIFICATION_IN_APP_ENABLED=true

# Configuración de WebSockets (NUEVO)
WEBSOCKET_ENABLED=true
WEBSOCKET_CORS_ORIGINS=*

# Configuración del scheduler (NUEVO)
SCHEDULER_ENABLED=true
SCHEDULER_TIMEZONE=America/New_York

# Configuración de limpieza automática (NUEVO)
NOTIFICATION_CLEANUP_DAYS=30
REMINDER_HOURS_BEFORE=24